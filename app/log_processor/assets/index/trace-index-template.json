{
  "index_patterns": ["trace-*"],
  "priority": 1,
  "template": {
    "settings": {
      "number_of_shards": "1",
      "refresh_interval": "10s"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time"
        },
        "app": {
          "type": "keyword"
        },
        "result": {
          "type": "keyword"
        },
        "action": {
          "type": "keyword"
        },
        "error_code": {
          "type": "keyword"
        },
        "content": {
          "type": "text",
          "index": "false"
        }
      }
    }
  }
}
